{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "ui/static/scripts/dist",
        "rootDir": "ui/static/scripts",
        "sourceMap": true,
        "moduleResolution": "node",
        "lib": ["ES2020", "DOM", "DOM.Iterable"]
    },
    "include": ["ui/static/scripts/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
